generator client {
  provider = "prisma-client-js"
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  type        String
  director    String
  year        Int
  duration   Int
  budget      String
  location    String
  genre       String
  rating      Float
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
